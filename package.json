{
  "name": "@hebcal/leyning",
  "version": "9.0.2",
  "author": "Michael J. Radwin (https://github.com/mjradwin)",
  "keywords": [
    "hebcal",
    "torah",
    "sedra",
    "sedrot",
    "leyning",
    "kriyah",
    "leining",
    "sidra",
    "parsha",
    "parasha",
    "parashah"
  ],
  "description": "Torah Reading API for Parashat HaShavua and holidays",
  "module": "./dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./dist/esm/*": "./dist/esm/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hebcal/hebcal-leyning.git"
  },
  "bugs": {
    "url": "https://github.com/hebcal/hebcal-leyning/issues"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@hebcal/core": "^5.8.0",
    "@hebcal/hdate": "^0.12.0",
    "tslib": "^2.8.1"
  },
  "scripts": {
    "po2json": "node ./po2json.cjs po/he.po",
    "size-demo:rollup": "rollup -c size-demo/rollup.config.ts --configPlugin typescript",
    "size-demo": "npm run build && npm run size-demo:rollup",
    "build:rollup": "rollup -c",
    "build": "npm run po2json && npm run build:rollup",
    "prepublish": "npm run build",
    "docs": "typedoc",
    "pretest": "npm run build",
    "lint": "gts lint",
    "coverage": "jest --coverage",
    "test": "jest",
    "clean": "gts clean",
    "fix": "gts fix"
  },
  "license": "BSD-2-Clause",
  "overrides": {
    "babel-plugin-ttag@1.8.16": {
      "babel-plugin-macros": "3.1.0"
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "gts": "^5.3.1",
    "jest": "^29.7.0",
    "pretty-bytes": "^6.1.1",
    "rollup": "^4.24.4",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "ts-jest": "^29.2.5",
    "ttag-cli": "^1.10.12",
    "typedoc": "^0.27.4",
    "typescript": "^5.6.3"
  }
}
