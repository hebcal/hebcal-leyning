{
  "name": "@hebcal/leyning",
  "version": "8.2.2",
  "author": "Michael J. Radwin (https://github.com/mjradwin)",
  "keywords": [
    "hebcal",
    "torah",
    "sedra",
    "sedrot",
    "leyning",
    "kriyah",
    "leining",
    "sidra",
    "parsha",
    "parasha",
    "parashah"
  ],
  "description": "Torah Reading API for Parashat HaShavua and holidays",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "type": "module",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs",
    "types": "./dist/index.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hebcal/hebcal-leyning.git"
  },
  "bugs": {
    "url": "https://github.com/hebcal/hebcal-leyning/issues"
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "leyning-csv": "bin/leyning-csv"
  },
  "dependencies": {
    "@hebcal/core": "^5.4.8",
    "tslib": "^2.6.3"
  },
  "scripts": {
    "build:rollup": "rollup -c",
    "build:json2js": "for f in src/*.json; do echo 'export default' > $f.ts && cat $f >> $f.ts; done",
    "build": "npm run build:json2js && npm run build:rollup",
    "prepublish": "npm run build",
    "docs": "typedoc",
    "pretest": "npm run build",
    "lint": "gts lint",
    "coverage": "jest --coverage",
    "test": "jest",
    "clean": "gts clean",
    "fix": "gts fix"
  },
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.5",
    "gts": "^5.3.1",
    "jest": "^29.7.0",
    "rollup": "^4.18.0",
    "ts-jest": "^29.1.5",
    "typedoc": "^0.26.3",
    "typescript": "^5.5.3"
  }
}
